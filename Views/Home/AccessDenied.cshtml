@{
    ViewBag.Title = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-shield-alt fa-4x text-danger"></i>
                </div>
                <h1 class="display-4 text-danger">403</h1>
                <h4 class="mb-3">Access Denied</h4>
                <p class="text-muted mb-4">
                    You don't have permission to access this resource.
                    This action requires administrator privileges.
                </p>

                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Administrator Access Required:</strong>
                    Only users with administrator role can perform this action.
                </div>

                <div class="d-grid gap-2 d-md-block">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go Home
                    </a>
                    <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                        <i class="fas fa-arrow-left me-1"></i>Go Back
                    </button>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="mt-4">
                        <small class="text-muted">
                            Logged in as: <strong>@User.Identity.Name</strong>
                            @if (User.IsInRole("User"))
                            {
                                <span class="badge bg-secondary ms-1">User</span>
                            }
                        </small>
                    </div>
                }
            </div>
        </div>

        <!-- Contact Admin -->
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h6 class="mb-1">Need Admin Access?</h6>
                        <p class="text-muted mb-0">
                            Contact your system administrator to request elevated privileges.
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="mailto:admin@company.com" class="btn btn-outline-primary">
                            <i class="fas fa-envelope me-1"></i>Contact Admin
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
