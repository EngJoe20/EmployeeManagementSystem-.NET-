@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Header Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white mx-auto mb-3"
                             style="width: 100px; height: 100px; font-size: 2rem;">
                            @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                        </div>
                    </div>
                    <div class="col-md-7">
                        <h2 class="text-primary mb-1">@Model.FullName</h2>
                        <p class="text-muted mb-2">Employee ID: #EMP@(Model.Id.ToString("000"))</p>
                        @if (Model.Department != null)
                        {
                            <p class="mb-1">
                                <i class="fas fa-building text-muted me-1"></i>
                                <a href="@Url.Action("Details", "Department", new { id = Model.Department.Id })"
                                   class="text-decoration-none">@Model.Department.Name</a>
                            </p>
                        }
                        <p class="mb-0">
                            <i class="fas fa-calendar text-muted me-1"></i>
                            Joined @Model.HireDate.ToString("MMMM dd, yyyy")
                        </p>
                    </div>
                    <div class="col-md-3 text-end">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="btn-group-vertical d-grid gap-1">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i>Edit Employee
                                </a>
                                <button type="button" class="btn btn-outline-danger"
                                        onclick="confirmDelete(@Model.Id, '@Model.FullName')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Personal Information -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>Personal Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Full Name:</strong>
                            </div>
                            <div class="col-sm-7">
                                @Model.FullName
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Email:</strong>
                            </div>
                            <div class="col-sm-7">
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </a>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-5">
                                    <strong class="text-muted">Phone:</strong>
                                </div>
                                <div class="col-sm-7">
                                    <a href="tel:@Model.Phone" class="text-decoration-none">
                                        <i class="fas fa-phone me-1"></i>@Model.Phone
                                    </a>
                                </div>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Employee ID:</strong>
                            </div>
                            <div class="col-sm-7">
                                <span class="badge bg-secondary">#EMP@(Model.Id.ToString("000"))</span>
                            </div>
                        </div>

                        <div class="row mb-0">
                            <div class="col-sm-5">
                                <strong class="text-muted">Status:</strong>
                            </div>
                            <div class="col-sm-7">
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>Active
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employment Information -->
            <div class="col-lg-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-briefcase me-2"></i>Employment Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Department:</strong>
                            </div>
                            <div class="col-sm-7">
                                @if (Model.Department != null)
                                {
                                    <a href="@Url.Action("Details", "Department", new { id = Model.Department.Id })"
                                       class="badge bg-primary text-decoration-none">
                                        @Model.Department.Name
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Salary:</strong>
                            </div>
                            <div class="col-sm-7">
                                <span class="h5 text-success mb-0">@Model.Salary.ToString("C")</span>
                                <small class="text-muted d-block">Monthly</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-5">
                                <strong class="text-muted">Hire Date:</strong>
                            </div>
                            <div class="col-sm-7">
                                @Model.HireDate.ToString("MMMM dd, yyyy")
                                <small class="text-muted d-block">
                                    @{
                                        var yearsOfService = (DateTime.Now - Model.HireDate).Days / 365.25;
                                        var totalDays = (DateTime.Now - Model.HireDate).Days;
                                    }
                                    @yearsOfService.ToString("F1") years of service
                                </small>
                            </div>
                        </div>

                        <div class="row mb-0">
                            <div class="col-sm-5">
                                <strong class="text-muted">Join Date:</strong>
                            </div>
                            <div class="col-sm-7">
                                @Model.CreatedDate.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">Added to system</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Row -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <div class="text-primary mb-2">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                        <h5 class="card-title">@((int)yearsOfService)</h5>
                        <p class="card-text text-muted small">Years of Service</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <div class="text-success mb-2">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                        <h5 class="card-title">@((Model.Salary * 12).ToString("C0"))</h5>
                        <p class="card-text text-muted small">Annual Salary</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <div class="text-info mb-2">
                            <i class="fas fa-building fa-2x"></i>
                        </div>
                        <h5 class="card-title">@(Model.Department?.Name ?? "N/A")</h5>
                        <p class="card-text text-muted small">Department</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm text-center">
                    <div class="card-body">
                        <div class="text-warning mb-2">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <h5 class="card-title">@totalDays</h5>
                        <p class="card-text text-muted small">Days Employed</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        @if (Model.Department != null)
                        {
                            <a href="@Url.Action("Details", "Department", new { id = Model.Department.Id })" class="btn btn-outline-info">
                                <i class="fas fa-building me-1"></i>View Department
                            </a>
                        }
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary me-2">
                                <i class="fas fa-edit me-1"></i>Edit Employee
                            </a>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog me-1"></i>More Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item" onclick="printEmployee()">
                                            <i class="fas fa-print me-2"></i>Print Details
                                        </button>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ExportEmployee", new { id = Model.Id })">
                                            <i class="fas fa-file-export me-2"></i>Export Data
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button class="dropdown-item text-danger" onclick="confirmDelete(@Model.Id, '@Model.FullName')">
                                            <i class="fas fa-trash me-2"></i>Delete Employee
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="employeeName"></strong>?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        This action will deactivate the employee record but preserve it for historical purposes.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete Employee</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        function confirmDelete(employeeId, employeeName) {
            document.getElementById('employeeName').textContent = employeeName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Employee")/' + employeeId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function printEmployee() {
            window.print();
        }

        // Add print styles
        var printStyles = `
            <style media="print">
                .btn, .dropdown, .modal { display: none !important; }
                .card { border: 1px solid #ddd !important; box-shadow: none !important; }
                .bg-primary { background-color: #007bff !important; }
                .text-primary { color: #007bff !important; }
                body { font-size: 12pt; }
            </style>
        `;
        $('head').append(printStyles);
    </script>
}