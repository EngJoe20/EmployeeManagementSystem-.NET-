@model EmployeeManagement.Models.Department

@{
    ViewBag.Title = "Department Details";
}

<div class="row">
    <!-- Department Header -->
    <div class="col-12 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white me-3"
                                 style="width: 60px; height: 60px;">
                                <i class="fas fa-building fa-2x"></i>
                            </div>
                            <div>
                                <h2 class="text-primary mb-1">@Model.Name</h2>
                                <p class="text-muted mb-1">Department ID: #DEPT@(Model.Id.ToString("00"))</p>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Created: @Model.CreatedDate.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="btn-group-vertical d-grid gap-1">
                                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i>Edit Department
                                </a>
                                @* <a href="@Url.Action("Create", "Employee", new { departmentId = Model.Id })"
                                   class="btn btn-success">
                                    <i class="fas fa-user-plus me-1"></i>Add Employee
                                </a> *@
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Department Information -->
    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Department Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong class="text-muted d-block">Department Name:</strong>
                    <span class="h6">@Model.Name</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong class="text-muted d-block">Description:</strong>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }

                <div class="mb-3">
                    <strong class="text-muted d-block">Status:</strong>
                    <span class="badge bg-success">
                        <i class="fas fa-check-circle me-1"></i>Active
                    </span>
                </div>

                <div class="mb-3">
                    <strong class="text-muted d-block">Created Date:</strong>
                    <span>@Model.CreatedDate.ToString("MMMM dd, yyyy")</span>
                </div>

                <div class="mb-0">
                    <strong class="text-muted d-block">Department ID:</strong>
                    <span class="font-monospace">#DEPT@(Model.Id.ToString("00"))</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Statistics -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Department Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body py-3">
                                <div class="mb-2">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                                <h3 class="mb-0">@Model.Employees.Count(e => e.IsActive)</h3>
                                <small>Total Employees</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-success text-white">
                            <div class="card-body py-3">
                                <div class="mb-2">
                                    <i class="fas fa-dollar-sign fa-2x"></i>
                                </div>
                                <h3 class="mb-0">
                                    @if (Model.Employees.Any(e => e.IsActive))
                                    {
                                        @Model.Employees.Where(e => e.IsActive).Average(e => e.Salary).ToString("C0")
                                    }
                                    else
                                    {
                                        <span>$0</span>
                                    }
                                </h3>
                                <small>Average Salary</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-info text-white">
                            <div class="card-body py-3">
                                <div class="mb-2">
                                    <i class="fas fa-money-bill-wave fa-2x"></i>
                                </div>
                                <h3 class="mb-0">
                                    @if (Model.Employees.Any(e => e.IsActive))
                                    {
                                        @Model.Employees.Where(e => e.IsActive).Sum(e => e.Salary).ToString("C0")
                                    }
                                    else
                                    {
                                        <span>$0</span>
                                    }
                                </h3>
                                <small>Total Payroll</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body py-3">
                                <div class="mb-2">
                                    <i class="fas fa-calendar-alt fa-2x"></i>
                                </div>
                                <h3 class="mb-0">
                                    @if (Model.Employees.Any(e => e.IsActive))
                                    {
                                        @((int)Model.Employees.Where(e => e.IsActive).Average(e => (DateTime.Now - e.HireDate).Days / 365.25))
                                    }
                                    else
                                    {
                                        <span>0</span>
                                    }
                                </h3>
                                <small>Avg. Years Service</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Department Employees -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Department Employees (@Model.Employees.Count(e => e.IsActive))
                </h5>
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Create", "Employee", new { departmentId = Model.Id })"
                       class="btn btn-success btn-sm">
                        <i class="fas fa-user-plus me-1"></i>Add Employee
                    </a>
                }
            </div>
            <div class="card-body">
                @if (Model.Employees.Any(e => e.IsActive))
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee</th>
                                    <th>Contact</th>
                                    <th class="text-end">Salary</th>
                                    <th>Hire Date</th>
                                    <th>Service Years</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.Employees.Where(e => e.IsActive).OrderBy(e => e.FirstName))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white me-3"
                                                     style="width: 40px; height: 40px; font-size: 14px;">
                                                    @employee.FirstName.Substring(0, 1)@employee.LastName.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@employee.FullName</div>
                                                    <small class="text-muted">#EMP@(employee.Id.ToString("000"))</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div>@employee.Email</div>
                                            @if (!string.IsNullOrEmpty(employee.Phone))
                                            {
                                                <small class="text-muted">@employee.Phone</small>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold text-success">@employee.Salary.ToString("C")</span>
                                        </td>
                                        <td>
                                            @employee.HireDate.ToString("MMM dd, yyyy")
                                        </td>
                                        <td>
                                            @{
                                                var years = (DateTime.Now - employee.HireDate).Days / 365.25;
                                            }
                                            @years.ToString("F1") years
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Details", "Employee", new { id = employee.Id })"
                                                   class="btn btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })"
                                                       class="btn btn-outline-secondary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No employees in this department</h5>
                        @if (User.IsInRole("Admin"))
                        {
                            <p class="text-muted mb-4">Start building your team by adding employees to this department.</p>
                            <a href="@Url.Action("Create", "Employee", new { departmentId = Model.Id })"
                               class="btn btn-success">
                                <i class="fas fa-user-plus me-1"></i>Add First Employee
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">Contact your administrator to add employees to this department.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i>Back to Departments
                        </a>
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-outline-info">
                            <i class="fas fa-users me-1"></i>View All Employees
                        </a>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary me-2">
                                <i class="fas fa-edit me-1"></i>Edit Department
                            </a>
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog me-1"></i>More Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item" onclick="printDepartment()">
                                            <i class="fas fa-print me-2"></i>Print Details
                                        </button>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ExportDepartment", new { id = Model.Id })">
                                            <i class="fas fa-file-export me-2"></i>Export Employee List
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (!Model.Employees.Any(e => e.IsActive))
                                    {
                                        <li>
                                            <button class="dropdown-item text-danger" onclick="confirmDelete(@Model.Id, '@Model.Name')">
                                                <i class="fas fa-trash me-2"></i>Delete Department
                                            </button>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <span class="dropdown-item-text text-muted">
                                                <i class="fas fa-info-circle me-2"></i>Cannot delete (has employees)
                                            </span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (User.IsInRole("Admin") && !Model.Employees.Any(e => e.IsActive))
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the department <strong id="departmentName"></strong>?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        This action will deactivate the department but preserve it for historical purposes.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete Department</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        function confirmDelete(departmentId, departmentName) {
            document.getElementById('departmentName').textContent = departmentName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Department")/' + departmentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function printDepartment() {
            window.print();
        }

        // Add print styles
        var printStyles = `
            <style media="print">
                .btn, .dropdown, .modal { display: none !important; }
                .card { border: 1px solid #ddd !important; box-shadow: none !important; }
                .bg-primary { background-color: #007bff !important; }
                .text-primary { color: #007bff !important; }
                body { font-size: 12pt; }
            </style>
        `;
        $('head').append(printStyles);
    </script>
}